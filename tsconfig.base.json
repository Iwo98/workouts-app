{
  "compilerOptions": {
    "target": "es2018",
    "module": "node16",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node16",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": false,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": ["**/node_modules/*", ".git"]
}
