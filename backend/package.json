{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend for workouts-app",
  "main": "./dist/server.js",
  "author": "Iwo Brzyski",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "lint": "oxlint .",
    "clean": "rm -rf dist",
    "prepare": "husky"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src/server.ts",
    "ext": "ts,js,json"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn type-check",
      "yarn lint"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "oxlint": "^1.14.0",
    "prisma": "^6.14.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
