{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend for workouts-app",
  "main": "./dist/api/server.js",
  "author": "Iwo Brzyski",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/api/server.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src/api/server.ts",
    "ext": "ts,js,json"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.2.1 ",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.14.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
